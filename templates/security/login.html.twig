<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>

    {# Style CSS #}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <link rel="stylesheet" href="{{ asset('css/background.css') }}">

    {# Ikony FontAwesome #}
    <script src="https://kit.fontawesome.com/bb4f511674.js" crossorigin="anonymous"></script>
</head>
<body>
    <form method="POST" action="{{ path('app_login') }}">
    <img src="{{ asset('img/logo.svg') }}" alt="Logo">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <input name="_username" type="text" placeholder="Username" required autofocus value="{{ last_username }}">
    <input name="_password" type="password" placeholder="Password" required>
    
    <!-- CSRF Token (wymagane dla bezpieczeństwa) -->
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button type="submit" class="button-login">Login</button>

    <div class="remember-me">
        <input type="checkbox" name="_remember_me" id="remember_me">
        <label for="remember_me">Remember me</label>
    </div>
</form>
    <div class="container-login">
        <div class="box">
            <form class="login-form" action="{{ path('app_login') }}" method="POST">
                <img src="{{ asset('img/logo.svg') }}" alt="Logo" class="login-logo">
                
                {# Obsługa komunikatów błędów #}
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                
                {# Sprawdzenie czy użytkownik już jest zalogowany #}
                {% if app.user %}
                    <div class="alert alert-success">
                        You are already logged in as {{ app.user.username }}.
                    </div>
                {% endif %}

                <div class="input-group">
                    <input name="_username" type="text" placeholder="Username" required autofocus value="{{ last_username }}">
                </div>

                <div class="input-group">
                    <input name="_password" type="password" placeholder="Password" required>
                </div>

                <div class="remember-me">
                    <input type="checkbox" name="_remember_me" id="remember_me">
                    <label for="remember_me">Remember me</label>
                </div>

                <button type="submit" class="button-login">Login</button>

                <p class="register-text">Don’t have an account? <span class="link-register">Create here</span>.</p>
            </form>
        </div>
    </div>
</body>
</html>
